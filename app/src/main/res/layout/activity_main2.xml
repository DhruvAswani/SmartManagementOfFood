<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="381dp"
        android:layout_height="53dp"
        android:background="@drawable/circular_buton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />
    </androidx.appcompat.widget.SearchView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="#100F0F"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="703dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintVertical_bias="0.508">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="255dp"
                android:layout_height="199dp"
                android:layout_gravity="center"
                android:background="@drawable/mohit_botton"
                android:baselineAligned="false"
                android:contentDescription="Raw Food Management"
                app:srcCompat="@drawable/ic_raw" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Raw Food Management"
                android:textColor="#080809"
                android:textSize="25dp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="257dp"
                android:layout_height="202dp"
                android:layout_gravity="center"
                android:background="@drawable/mohit_botton"
                android:contentDescription="Used Food Management"
                app:srcCompat="@drawable/ic_used" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Used Food Mangement"
                android:textColor="#0E0C0C"
                android:textSize="25dp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="257dp"
                android:layout_height="204dp"
                android:layout_gravity="center"
                android:background="@drawable/mohit_botton"
                android:contentDescription="Waste Food Management"
                app:srcCompat="@drawable/ic_ngo" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Waste Food Mangement"
                android:textColor="#120E0E"
                android:textSize="25dp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="264dp"
                android:layout_height="199dp"
                android:layout_gravity="center"
                android:background="@drawable/mohit_botton"
                android:contentDescription="Notes"
                app:srcCompat="@drawable/ic_note" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Note Important"
                android:textColor="#120E0E"
                android:textSize="25dp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>